<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationFrequencyPreferenceRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:hapticFeedbackEnabled="false"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/settings_row_padding"
    android:paddingVertical="@dimen/settings_row_padding">

    <TextView
        android:id="@+id/notificationFrequencyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_frequency_name"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <TextView
        android:id="@+id/notificationFrequencyDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_frequency_description"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textSize="@dimen/custom_preference_text_size" />

</LinearLayout>