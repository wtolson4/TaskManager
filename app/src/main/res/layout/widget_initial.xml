    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Widget"
        android:textSize="24sp"
        android:textColor="?attr/colorOnPrimarySurface" />

</LinearLayout>